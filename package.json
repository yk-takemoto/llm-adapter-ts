{
  "name": "@yk-takemoto/llm-adapter",
  "version": "0.1.0",
  "description": "LLM adapter for TypeScript",
  "main": "lib/bundle.cjs.js",
  "module": "lib/bundle.esm.js",
  "browser": "lib/bundle.umd.js",
  "files": [
    "./lib"
  ],
  "scripts": {
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "lint": "eslint",
    "uttest": "mocha -r ts-node/register -r tsconfig-paths/register 'tests/**/uttest_*.ts'",
    "ittest": "mocha -r ts-node/register -r tsconfig-paths/register 'tests/**/ittest_*.ts'",
    "test": "yarn uttest && yarn ittest",
    "compile": "rm -r lib/* && tsc && npx rollup -c && tsc-alias",
    "build": "yarn format && yarn lint && yarn compile",
    "full": "yarn format && yarn lint && yarn test && yarn compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yk-takemoto/llm-adapter-ts"
  },
  "author": "Yukihiro Takemoto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yk-takemoto/llm-adapter-ts/issues"
  },
  "homepage": "https://github.com/yk-takemoto/llm-adapter-ts#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@google/generative-ai": "^0.21.0",
    "groq-sdk": "^0.12.0",
    "openai": "^4.78.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.18.0",
    "@types/sinon": "^17.0.4",
    "chai": "^5.2.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "mocha": "^11.5.0",
    "prettier": "^3.4.2",
    "rollup": "^4.30.1",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "types": "./lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "tests"
  }
}
